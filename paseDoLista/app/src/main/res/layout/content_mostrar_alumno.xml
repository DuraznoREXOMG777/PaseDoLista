<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_imagenAlumno"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="6dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_nombreAlumno"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_imagenAlumno"
            android:text="Andrea Daniella Gaxiola Coronado"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_matriculaAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombreAlumno"
            android:layout_toRightOf="@id/iv_imagenAlumno"
            android:text="15130253"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_nombreAlumno"
            android:layout_alignParentEnd="true"
            android:gravity="right">

            <CheckBox
                android:id="@+id/ckb_asis"
                style="?android:starStyle"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/tv_nombreAlumno"
                android:checked="true"/>


        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>